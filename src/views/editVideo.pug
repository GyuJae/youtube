extends base.pug
include components/video

block content
    div.editProfile_container
        form(method="POST")
            input.public_input(name="title", placeholder="Video Title", value=video.title, required maxlength=80)
            input.public_input(placeholder="Description", required, type="text", name="description", minlength=20, value=video.description)
            input.public_input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
            input.submit(value="Save",type="submit")