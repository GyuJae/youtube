extends ./base

block content
    div.editProfile_container
        form(method="post",autocomplete="off")
            label.public_label(for="oldPassword") Old Password 
            input.public_input(placeholder="Old Password" , type="password",name="oldPassword")
            label.public_label(for="newPassword") New Password 
            input.public_input(placeholder="New Password", type="password",name="newPassword")
            label.public_label(for="newPassword2") New Password Confirmation
            input.public_input(placeholder="New Password Confirmation", type="password",name="newPassword2")
            input.submit(value="Change Password", type="submit") 